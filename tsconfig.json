{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": false,
    "inlineSourceMap": true,
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "outDir": "compiled",
    "typeRoots": [
      "typings",
      "./node_modules/@types"
    ],
    "types": []
  },
  "filesGlob": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "defs"
  ]
}
